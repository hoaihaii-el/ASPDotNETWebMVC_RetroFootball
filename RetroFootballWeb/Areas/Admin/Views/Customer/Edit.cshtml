@model Customer
<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Edit Customer</span></h2>
    </div>
    <a asp-area="Admin" asp-action="Index" asp-controller="Customer" class="btn border bg-secondary m-3">
        <i class="fas fa-arrow-left text-primary"></i>
        <span>Back to list products</span>
    </a>
    <div class="col-lg-12 mx-3 bg-gradient p-3">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>ID</label>
                <input asp-for="ID" class="form-control ml-2" />
                <span asp-validation-for="ID" class="text-danger" />
            </div>
            <div class="form-group">
                <label>Name</label>
                <input asp-for="Name" class="form-control ml-2" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input asp-for="Password" class="form-control ml-2" />
                <span asp-validation-for="Password" class="text-danger" />
            </div>
            <div class="form-group">
                <label>Role</label>
                <input asp-for="Role" class="form-control ml-2" />
                <span asp-validation-for="Role" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}