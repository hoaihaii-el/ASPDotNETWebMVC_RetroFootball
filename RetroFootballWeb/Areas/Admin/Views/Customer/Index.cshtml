@model IEnumerable<Customer>
<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Manage Product</span></h2>
    </div>
    <div class="col-lg-12 mx-auto table-responsive mb-5">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Gender</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.ID</td>
                        <td>@customer.Name</td>
                        <td>@customer.Phone</td>
                        @if (customer.Male)
                        {
                            <td>Male</td>
                        }
                        else
                        {
                            <td>Female</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>