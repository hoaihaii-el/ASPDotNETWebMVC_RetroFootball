@model IEnumerable<Order>
<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Manage Order</span></h2>
    </div>
    <div class="col-lg-12 d-none d-lg-block">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col" width="50">ID</th>
                    <th scope="col">Customer ID</th>
                    <th scope="col">Time created</th>
                    <th scope="col">Value</th>
                    <th scope="col">Deliver method</th>
                    <th scope="col" width="150">Note</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.ID</td>
                        <td>@order.Customer.ID</td>
                        <td>@order.Time_create</td>
                        <td>$@order.Value</td>
                        <td>@order.Delivery_method</td>
                        <td>@order.Note</td>
                        <td>@order.Status</td>
                        <td>
                            <a asp-area="Admin" asp-action="Detail" asp-controller="Order" asp-route-orderID="@order.ID" class="btn border bg-secondary">
                                <span>Detail</span>
                            </a>
                            <a asp-area="Admin" asp-action="Update" asp-controller="Order" asp-route-orderID="@order.ID" class="btn border bg-secondary">
                                <span>Update</span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
