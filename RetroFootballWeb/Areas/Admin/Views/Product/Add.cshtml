@model Product
<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Add New Product</span></h2>
    </div>
    <a asp-area="Admin" asp-action="Index" asp-controller="Product" class="btn border bg-secondary m-3">
        <i class="fas fa-arrow-left text-primary"></i>
        <span>Back to list products</span>
    </a>
    <div class="col-lg-12 mx-3 bg-gradient p-3">
        <form asp-action="Add" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="justify-content-between form-inline mb-3">
                <div class="form-group">
                    <label>Name</label>
                    <input asp-for="Name" class="form-control ml-2"/>
                    <span asp-validation-for="Name" class="text-danger"/>
                </div>
                <div class="form-group">
                    <label>Club</label>
                    <input asp-for="Club" class="form-control ml-2" />
                    <span asp-validation-for="Club" class="text-danger" />
                </div>
                <div class="form-group">
                    <label>Nation</label>
                    <input asp-for="Nation" class="form-control ml-2" />
                    <span asp-validation-for="Nation" class="text-danger" />
                </div>
                <div class="form-group">
                    <label>Season</label>
                    <input asp-for="Season" class="form-control ml-2" />
                    <span asp-validation-for="Season" class="text-danger" />
                </div>
            </div>
            <div class="form-inline justify-content-between mb-3">
                <div class="form-group">
                    <label>Price</label>
                    <input asp-for="Price" class="form-control ml-2" />
                    <span asp-validation-for="Price" class="text-danger" />
                </div>
                <div class="form-group">
                    <label>Size_s</label>
                    <input asp-for="Size_s" class="form-control ml-2" />
                    <span asp-validation-for="Size_s" class="text-danger" />
                </div>
                <div class="form-group">
                    <label>Size_m</label>
                    <input asp-for="Size_m" class="form-control ml-2" />
                    <span asp-validation-for="Size_m" class="text-danger" />
                </div>
                <div class="form-group">
                    <label>Size_l</label>
                    <input asp-for="Size_l" class="form-control ml-2" />
                    <span asp-validation-for="Size_l" class="text-danger" />
                </div>
                <div class="form-group">
                    <label>Size_xl</label>
                    <input asp-for="Size_xl" class="form-control ml-2" />
                    <span asp-validation-for="Size_xl" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label>Image</label>
                <input asp-for="ImageUpLoad" class="form-control-file" />
                <span asp-validation-for="ImageUpLoad" class="text-danger" />
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
