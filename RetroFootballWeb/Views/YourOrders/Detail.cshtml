@model IEnumerable<OrderDetail>
<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Order detail</span></h2>
    </div>
    <a asp-action="Index" asp-controller="YourOrders" class="btn border bg-secondary m-3">
        <i class="fas fa-arrow-left text-primary"></i>
        <span>Back to List Order</span>
    </a>
    <div class="col-lg-12 d-none d-lg-block">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Order ID</th>
                    <th scope="col">Product ID</th>
                    <th scope="col">Size</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderID</td>
                        <td>@order.ProductID</td>
                        <td>@order.Size</td>
                        <td>@order.Quantity</td>
                        <td><img src="~/img/products//@order.Product.Image" width="50" /></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
