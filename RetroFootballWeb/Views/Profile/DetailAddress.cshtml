@model IEnumerable<DeliveryInfo>
<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Detail Address</span></h2>
    </div>
    <div class="row">
        <a asp-action="NewAddress" asp-controller="Profile" class="btn border bg-secondary m-3">
            <i class="fas fa-plus text-primary"></i>
            <span>New Delivery Info</span>
        </a>
    </div>
    <div class="col-lg-12 mx-auto table-responsive mb-5">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Name</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Address</th>
                    <th scope="col">Manage</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var info in Model)
                {
                    <tr>
                        @if (info.Priority == 1)
                        {
                            <td>Default</td>
                        }
                        <td>@info.Name</td>
                        <td>@info.Phone</td>
                        <td>@info.Address</td>
                        <td>
                            <a asp-action="EditAddress" asp-controller="Profile" asp-route-customerID="@info.CustomerID" asp-route-Priority="@info.Priority" class="btn border bg-secondary">
                                <i class="fas fa-edit text-primary"></i>
                            </a>
                            <a asp-action="DeleteAddress" asp-controller="Profile" asp-route-customerID="@info.CustomerID" asp-route-Priority="@info.Priority" class="btn border bg-secondary">
                                <i class="fas fa-times text-primary"></i>
                            </a>
                                <a asp-action="SetAddressDefault" asp-controller="Profile" asp-route-customerID="@info.CustomerID" asp-route-Priority="@info.Priority" class="btn border bg-secondary">
                                <span>Set as default</span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>