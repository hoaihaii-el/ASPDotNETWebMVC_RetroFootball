@model Customer
<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Edit profile</span></h2>
    </div>
    <div class="col-lg-12 mx-3 bg-gradient p-3">
        <form asp-action="EditProfile" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>ID</label>
                <input readonly asp-for="ID" class="form-control ml-2"/>
            </div>
            <div class="form-group">
                <label>Name</label>
                <input asp-for="Name" class="form-control ml-2" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <div class="form-group">
                <label>Phone</label>
                <input asp-for="Phone" class="form-control ml-2" />
                <span asp-validation-for="Phone" class="text-danger" />
            </div>
            <div class="form-group">
                <label>Male</label>
                <input asp-for="Male" class="form-check-input ml-2" />
                <span asp-validation-for="Male" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}