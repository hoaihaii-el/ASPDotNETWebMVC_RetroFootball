@model Customer
<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Information</span></h2>
    </div>
    <div class="row">
        <a asp-action="DetailAddress" asp-controller="Profile" class="btn border bg-secondary m-3">
            <i class="fas fa-plus text-primary"></i>
            <span>Your Detail Address</span>
        </a>
    </div>
    <div class="col-lg-12 mx-auto table-responsive mb-5">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Edit</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.ID</td>
                    <td>@Model.Name</td>
                    <td>@Model.Phone</td>
                    @if (Model.Male)
                    {
                        <td>Male</td>
                    }
                    else
                    {
                        <td>Female</td>
                    }
                    <td>
                        <a asp-action="EditProfile" asp-controller="Profile" asp-route-customerID="@Model.ID" class="btn border bg-secondary">
                            <i class="fas fa-edit text-primary"></i>
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>